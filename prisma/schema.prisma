generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String

  @@map("users")
}

model Information {
  id          Int     @id @default(autoincrement())
  phoneNumber String  @map("phone_number")
  mail        String
  address     String?

  @@map("informations")
}

model Contact {
  id        Int          @id @default(autoincrement())
  subject   SubjectType? @default(other)
  firstName String       @map("first_name")
  lastName  String       @map("last_name")
  email     String
  message   String
  createdAt DateTime     @default(now()) @map("created_at")

  @@map("contact_forms")
}

model Service {
  id            Int            @id @default(autoincrement())
  title         String
  imageUrl      String         @map("image_url")
  description   String?
  createdAt     DateTime       @default(now())
  type          ServiceType
  quoteRequests QuoteRequest[]

  @@map("services")
}

model Visit {
  id     Int        @id @default(autoincrement())
  count  Int        @default(0)
  date   DateTime
  visits DateTime[]

  @@map("visits")
}

model QuoteRequest {
  id          Int       @id @default(autoincrement())
  name        String
  email       String
  phoneNumber String?   @map("phone_number") @db.VarChar(20)
  message     String
  quoteType   QuoteType @map("type")
  service     Service   @relation(fields: [serviceId], references: [id], onDelete: Cascade)
  serviceId   Int
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@map("quote_requests")
}

enum SubjectType {
  edu
  travel
  business
  other
}

enum ServiceType {
  edu
  travel
}

enum QuoteType {
  EDU
  TRAVEL
}

model EventInfo {
  id                   Int      @id @default(autoincrement()) @map("event_id")
  eventName            String   @map("event_name")
  eventDate            DateTime @map("event_date")
  eventTime            String   @map("event_time")
  location             String   @map("event_location")
  description          String   @map("event_description")
  studentBenefits      Json     @map("student_benefits")
  institutionBenefits  Json     @map("institution_benefits")
  registrationDeadline DateTime @map("registration_deadline")
  visible              Boolean  @default(true) @map("is_visible")

  @@map("event_info")
}
